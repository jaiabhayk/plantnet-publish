	<layer name="Température" alias="temp" minimap="false" opacity="0.6">
		<url><![CDATA[http://{s}.tile.openweathermap.org/map/temp/{z}/{x}/{y}.png]]></url>
		<attrib><![CDATA[Weather from <a href="http://openweathermap.org/">OpenWeatherMap</a>]]></attrib>
		<legend><![CDATA[http://openweathermap.org/img/a/TT.png]]></legend>
	</layer><!-- http://openweathermap.org/copyright : CC-BY-SA 2.0 -->
	<layer name="Précipitation" alias="precipitation_cls" minimap="false" opacity="0.6">
