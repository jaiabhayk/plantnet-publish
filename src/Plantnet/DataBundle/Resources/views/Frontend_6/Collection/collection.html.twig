{% extends "PlantnetDataBundle:Frontend_6:layout.html.twig" %}
{% block title config.name ~ ' - ' ~ collection.name ~ ' - Pl@ntnet' %}
{% block meta %}
    <meta name="description" content="{{ collection.description|striptags|truncate(200)|cleandesc }}"/>
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block header %}<h1>{{ collection.name }}</h1>{% endblock %}
{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('front_project', {'project': project}) }}">{{ config.name }}</a>
            <span class="divider">/</span>
        </li>
        <li class="active">
            {{ collection.name }}
        </li>
    </ul>
{% endblock %}
{% block row %}
    <div>
        {% autoescape false %}
            {{ collection.description }}
        {% endautoescape %}
    </div>
    <div>
        <div class="row">
            {% set item_size = '12' %}
            {% if collection.modules|length > 1 %}
                {% set item_size = item_size/2 %}
            {% endif %}
            {% for module in collection.modules if (module.deleting != true and module.wsonly != true) %}
                <div class="span{{ item_size }}">
                     {% include "PlantnetDataBundle:Frontend_6\\Module:module_presentation.html.twig" %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
            $('.carousel').carousel({
                interval:4000
            });
            $('.pop-tooltip').tooltip();
            $('.img-tooltip').tooltip();
        });
    </script>
{% endblock %}