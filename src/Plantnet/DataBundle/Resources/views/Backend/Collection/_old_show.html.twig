{% extends "PlantnetDataBundle::layout.html.twig" %}
{% block body %}
<h1>Collection</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Description</th>                <td>{{ entity.description }}</td>        </tr>
    </tbody>
</table>

<h3>Module</h3>
<div class="module">
    {% for row in module %}

                                <li class="vtop"><a href="{{ path('_module', { 'collection': entity.Name, 'module': row.Name }) }}">{{ row.Name }}</a></li>

                        {% endfor %}
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('collection') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('collection_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('collection_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}