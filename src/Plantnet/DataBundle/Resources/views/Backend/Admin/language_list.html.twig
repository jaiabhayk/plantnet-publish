{% if config.availablelanguages|length > 0 %}
    <ul class="nav nav-tabs">
        <li{% if lang == 'default' %} class="active"{% endif %}>
            <a href="{{ path('page_edit', { 'alias': alias }) }}" class="ajax sub">{{ config.defaultlanguage }}</a>
        </li>
        {% for language in config.availablelanguages %}
            <li{% if lang == language %} class="active"{% endif %}>
                <a href="{{ path('page_edit_lang', { 'alias': alias, 'lang': language }) }}" class="ajax sub">{{ language }}</a>
            </li>
        {% endfor %}
    </ul>
{% endif %}