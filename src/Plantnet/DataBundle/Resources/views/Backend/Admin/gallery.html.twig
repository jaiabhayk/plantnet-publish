{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Backend:ajax_form_layout.html.twig" : "PlantnetDataBundle:Backend:form_layout.html.twig" %}
{% block title module.name %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<section id="breadcrumbs">
		<a href="{{ path('admin_collection_view', { 'collection': collection.name }) }}">{{ collection.name }}</a>
		>
		<a href="{{ path('admin_module_view', { 'collection': collection.name, 'module': module.name }) }}">{{ module.name }}</a>
	</section>
	<div id="thumbsresults">
		{% if paginator|length > 0 %}
			<div class="pagerfanta">
				{{ pagerfanta(paginator, 'default') }}
			</div>
			{% for row in paginator %}
				{% set imgspe = row.path|basename %}
				{% set img = ['uploads/'~module.uploaddir~'/', imgspe]|join('') %}
				<a href="{{ asset(img) }}" class="grouped_elements" rel="group" title="{{ row.copyright }}">
					<img src="{{ asset(img) | imagine_filter('thumb_100_100') }}" alt="{{ imgspe }}" border="0" /></a>
			{% endfor %}
		{% endif %}
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready(function() {
			// $("a#single_image").fancybox();
			/* Apply fancybox to multiple items */
			$("a.grouped_elements").fancybox({
				'transitionIn':'elastic',
				'transitionOut':'elastic',
				'speedIn':200,
				'speedOut':200,
				'enableEscapeButton':true,
				'hideOnContentClick':true,
				'titlePosition':'inside',
				'overlayShow':false
			});
		});
		$(document).ready(function() {
            $('.pagerfanta a').click(function(e) {
                e.preventDefault();
                var $url = $(this).attr('href');
                $(this).prev().append('<div class="page-loading"></div>');
                $.get($url, function(data) {
                    $('#content').html(data);
                    //$(".page-loading").remove();
                });
            });
        });
	</script>
{% endblock %}