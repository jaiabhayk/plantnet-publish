{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Backend:ajax_form_layout.html.twig" : "PlantnetDataBundle:Backend:form_layout.html.twig" %}
{% block title module.name %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<section id="breadcrumbs">
		<a href="{{ path('admin_collection_view', { 'collection': collection.name }) }}">{{ collection.name }}</a>
		>
		<a href="{{ path('admin_module_view', { 'collection': collection.name, 'module': module.name }) }}">{{ module.name }}</a>
	</section>
	<div id="thumbsresults">
		{% if paginator|length > 0 %}
			<div class="pagerfanta">
				{{ pagerfanta(paginator, 'default') }}
			</div>
			{% for row in paginator %}
				<p>Data...</p>
			{% endfor %}
		{% endif %}
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready(function() {
            $('.pagerfanta a').click(function(e) {
                e.preventDefault();
                var $url = $(this).attr('href');
                $(this).prev().append('<div class="page-loading"></div>');
                $.get($url, function(data) {
                    $('#content').html(data);
                });
            });
        });
	</script>
{% endblock %}