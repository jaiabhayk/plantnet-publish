<!DOCTYPE html>
<!--[if lt IE 7 ]> <html class="ie6"> <![endif]-->
<!--[if IE 7 ]> <html class="ie7"> <![endif]-->
<!--[if IE 8 ]> <html class="ie8"> <![endif]-->
<!--[if IE 9 ]> <html class="ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html> <!--<![endif]-->
<head>
	{% block head %}
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
		Remove this if you use the .htaccess -->
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
		<meta name="description" content=""/>
		<meta name="author" content="Barbe Julien (AMAP), Affouard Antoine (AMAP)"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<link type="image/x-icon" rel="shortcut icon" href="{{ asset('bundles/plantnetdata/images/favicon.ico') }}" />
		<title>{% block title %}Plantnet{% endblock %}</title>
		{% block stylesheets %}
			{#
			{% stylesheets filter='less,cssrewrite,?yui_css' output='css/publish.css' debug=false 'bundles/plantnetdata/less/bootstrap.less' %}
				<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
			{% endstylesheets %}
			#}
			<link href="{{ asset('bundles/plantnetdata/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
			<style type="text/css">
				html{
					overflow-y:scroll;
				}
				html,body{
					background-color:#eee;
				}
				body{
					padding-top:40px; /* 40px to make the container go all the way to the bottom of the topbar */
				}
				/* The white background content wrapper */
				.container > .content{
					background-color:#fff;
					padding:20px;
					margin:0 -20px 40px -20px;/* negative indent the amount of the padding to maintain the grid system */
					-webkit-border-radius:0 0 12px 12px;
					-moz-border-radius:0 0 12px 12px;
					border-radius:0 0 12px 12px;
					-webkit-box-shadow:0 2px 4px rgba(0,0,0,.15);
					-moz-box-shadow:0 2px 4px rgba(0,0,0,.15);
					box-shadow:0 2px 4px rgba(0,0,0,.15);
				}
				/* Page header tweaks */
				.page-header{
					background-color:#f5f5f5;
					padding:4px 8px 23px;
					margin:-20px -20px 20px;
				}
				/* Popover */
				.popover{
					padding:5px 15px;
				}
				/* Custom */
				.brand{
					margin-bottom:-12px;
					height:16px;
					width:169px;
					background:url({{ asset('bundles/plantnetdata/images/plantnet.png') }}) no-repeat;
				}
				.brand:hover{
					margin-bottom:-12px;
					height:16px;
					width:169px;
					background:url({{ asset('bundles/plantnetdata/images/plantnet.png') }}) no-repeat;
				}
				.breadcrumb{
					border:solid 1px #EEE;
				}
				#page-loading{
					float:right;
					margin-top:8px;
				}
				.gallery{
					margin-bottom:20px;
				}
				.gallery > a{
					display:inline-block;
					background-color:rgba(0, 0, 0, 0.2);;
					margin-right:7px;
					margin-bottom:9px;
				}
				.gallery > a > .img-polaroid{
					opacity:0;
					width:100px;
					height:100px;
				}
				.unstyled-list{
					list-style-type:none;
				}
				/* Footer */
				#footer{
					height:79px;
					padding-top:10px;
				}
				#footer ul{
					list-style-type:none;
					float:left;
					margin:0;
				}
				#mention ul{
					float:right;
					margin-top:30px;
				}
				#footer li{
					float:left;
					margin-right:20px;
				}
				#mention li{
					margin-right:0;
					margin-left:20px;
				}
				/* Map */
				#map{
					-webkit-border-radius:6px;
					-moz-border-radius:6px;
					border-radius:6px;
					border:solid 1px #CCC;
					-webkit-box-shadow:0 0 5px #888;
					-moz-box-shadow:0 0 5px #888;
					box-shadow:0 0 5px #888;
					margin-bottom:20px;
				}
			</style>
			<link href="{{ asset('bundles/plantnetdata/bootstrap/css/bootstrap-responsive.min.css') }}" type="text/css" rel="stylesheet" />
		{% endblock %}
	{% endblock %}
</head>
<body>
	{% block topbar %}
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="{{ path('_index') }}"></a>
					<div class="nav-collapse collapse">
						<ul class="nav">
							{% if current is not defined %}
								{% set current = '#' %}
							{% endif %}
							<li{% if current == 'index' or current == 'project' %} class="active" {% endif %}>
								{% if project is not defined %}
									<a href="{{ url('_index') }}">
										{{ "tab-home"|trans }}
									</a>
								{% else %}
									<a href="{{ url('_project', {'project': project}) }}">
										{{ "tab-home"|trans }}
									</a>
								{% endif %}
							</li>
							{% if current != 'index' %}
								<li class="dropdown">
									<a class="dropdown-toggle" data-toggle="dropdown" href="#">{{ "tab-coll"|trans}} <span class="caret"></span></a>
									<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
										{% render controller("PlantnetDataBundle:Frontend\\Data:Collection_list", {'project': project}) %}
									</ul>
								</li>
								<li{% if current == 'search' %} class="active" {% endif %}>
									<a href="{{ url('_search', {'project': project}) }}">
										Search
									</a>
								</li>
							{% endif %}
						</ul>
						{% if current != 'index' %}
							<form action="#" class="navbar-search pull-right">
								<input type="text" class="search-query" placeholder="{{ 'search-field'|trans }}">
							</form>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
	<div class="container">
		<div class="content">
			<div class="page-header">
				{% block header %}{% endblock %}
			</div>
			<div class="row">
				<div class="span10">
					{% block breadcrumb %}{% endblock %}
					{% block main %}{% endblock %}
				</div>
				<div class="span4">
					{% block side %}{% endblock %}
				</div>
			</div>
		</div>
	</div>
	<footer id="footer">
		{% if current != 'index' %}
			<div class="container">
				{% block footer %}
					<ul>
						<li class="logofoot">
							<a href="http://www.plantnet-project.org" target="_blank">
								<img src="{{ asset('bundles/plantnetdata/images/footPlantnet.png') }}" alt="Projet Plantnet"></a>
						</li>
						<li class="logofoot">
							<a href="http://www.agropolis-fondation.fr/" target="_blank">
								<img src="{{ asset('bundles/plantnetdata/images/footAF.png') }}" alt="Agropolis Fondation"></a>
						</li>
					</ul>
					<nav id="mention">
						<ul>
							<li class="liens">
								<a href="{{ url('_credits', {'project': project}) }}">Credits</a>
							</li>
							<li class="liens">
								<a href="{{ url('_mentions', {'project': project}) }}">Mentions l√©gales</a>
							</li>
							<li class="liens">
								<a href="{{ url('_contacts', {'project': project}) }}">Contacts</a>
							</li>
							<li class="liens">
								<a href="#">Plan du site</a>
							</li>
						</ul>
					</nav>
				{% endblock %}
			</div>
		{% endif %}
	</footer>
	{% block javascripts %}
		{% javascripts
			'bundles/plantnetdata/js/jquery-1.7.min.js'
			'bundles/plantnetdata/bootstrap/js/bootstrap.min.js'
			'bundles/plantnetdata/js/spin.min.js'
			filter='?yui_js' output="js/publish.js" debug=false %}
			<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
		<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
		<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
		<script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translation.js') }}"></script>
		<script type="text/javascript" src="{{ url('bazinga_exposetranslation_js') }}"></script>
		<script type="text/javascript">
			$.ajaxSetup({
				cache: false
			});
			function ajaxLoader(){
				var opts = {
					lines: 10, // The number of lines to draw
					length: 2, // The length of each line
					width: 3, // The line thickness
					radius: 7, // The radius of the inner circle
					color: '#2B5261', // #rgb or #rrggbb
					speed: 1.2, // Rounds per second
					trail: 50, // Afterglow percentage
					shadow: false // Whether to render a shadow
				};
				var target = document.getElementById("page-loading");
				var spinner = new Spinner(opts).spin(target);
			}
			{#$(".row .span10").preloader();#}
		</script>
	{% endblock %}
</body>
</html>