{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Frontend:ajax_datatypes.html.twig" : "PlantnetDataBundle:Frontend:datatypes.html.twig" %}
{% block title module.name %}
{% block main %}
    <div class="results">
        {% if paginator|length > 0 %}
            <div class="pagerfanta">
                {{ pagerfanta(paginator, 'twitter_bootstrap') }}
            </div>
             <table cellpadding="3" class="zebra-striped">
                <thead>
                    <tr class="rowtop">
                        {% for row in display %}
                            <th class="vtop">{{ row }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in paginator %}
                        <tr class= "" onmouseover="this.style.cursor='pointer'" onclick="document.location='{{ path('_details', { 'owner': collection.user.usernameCanonical, 'collection': collection.name, 'module': module.name, 'id': row._id }) }}'">
                            {% for field in display %}
                                <td>{{ row.attributes[field] }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="pagerfanta">
                {{ pagerfanta(paginator, 'twitter_bootstrap') }}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}