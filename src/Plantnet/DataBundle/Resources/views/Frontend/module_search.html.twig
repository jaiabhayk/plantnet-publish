{% extends "PlantnetDataBundle:Frontend:layout.html.twig" %}
{% block title collection.name ~ ' - ' ~ module.name ~ ' - ' ~ "tab-search"|trans %}
{% block stylesheets %}
	{{ parent() }}
    {% include 'PlantnetDataBundle:Frontend:leaflet.css.html.twig' %}
{% endblock %}
{% block header %}<h1>{{ collection.name }} / {{ module.name }} / {{ "tab-search"|trans }}</h1>{% endblock %}
{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ url('_project', {'project': project}) }}">{{ project|capitalize }}</a>
            <span class="divider">/</span>
        </li>
        <li>
            <a href="{{ path('_collection', { 'project': project, 'collection': collection.name }) }}">{{ collection.name }}</a>
            <span class="divider">/</span>
        </li>
        <li>
            <a href="{{ path('_module', { 'project': project, 'collection': collection.name, 'module': module.name }) }}">{{ module.name }}</a>
            <span class="divider">/</span>
        </li>
        <li class="active">
            {{ "tab-search"|trans }}
        </li>
    </ul>
{% endblock %}
{% block side %}
    {% include "PlantnetDataBundle:Frontend:side.html.twig" with { collection: collection } %}
{% endblock %}
{% block main %}
    <div class="row">
        <div class="span3">
        	<form action="{{ path('_module_result', {'project': project, 'collection': collection, 'module': module}) }}" method="get" {{ form_enctype(form) }}>
                {{ form_widget(form.y_lat_1_bottom_left, {'id':'y_lat_1_bottom_left'}) }}
                {{ form_widget(form.x_lng_1_bottom_left, {'id':'x_lng_1_bottom_left'}) }}
                {{ form_widget(form.y_lat_2_top_right, {'id':'y_lat_2_top_right'}) }}
                {{ form_widget(form.x_lng_2_top_right, {'id':'x_lng_2_top_right'}) }}
                {{ form_widget(form) }}
                <input type="submit" value="{{ "tab-search"|trans }}" class="btn" />
            </form>
        </div>
        <div class="span6">
            {# LEAFLET MAP #}
            <div id="map"></div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
    {% include 'PlantnetDataBundle:Frontend:leaflet.js.html.twig' %}
{% endblock %}