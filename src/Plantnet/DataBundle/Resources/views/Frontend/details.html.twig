{% extends "PlantnetDataBundle:Frontend:layout.html.twig" %}
{% block title module.name %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/plantnetdata/js/fancybox/jquery.fancybox-1.3.4.css') }}" type="text/css" />
    {% if plantunit.locations|length > 0 %}
        {% include 'PlantnetDataBundle:Frontend:leaflet.css.html.twig' %}
    {% endif %}
{% endblock %}
{% block header %}<h1>{{ collection.name }} / {{ module.name }}</h1>{% endblock %}
{% block breadcrumb %}
 <ul class="breadcrumb">
    <li>
        <a href="{{ path('_collection', { 'project': project, 'collection': collection.name }) }}">{{ collection.name }}</a>
        <span class="divider">/</span>
    </li>
    <li class="active">
        <a href="{{ path('_module', { 'project': project, 'collection': collection.name, 'module': module.name }) }}">{{ module.name }}</a>
        <span class="divider">></span>
    </li>
    <li>details</li>
 </ul>
{% endblock %}
{% block main %}
    <section id="details">
        <table align='center' cellpadding="3" class="details" width="90%">
            {% for field in display %}
                {% if plantunit.attributes[field] %}
                    <tr class= "">
                        <td class="field-name">{{ field }}</td>
                        <td class="field-value">{{ plantunit.attributes[field] }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
        {% if plantunit.images|length > 0 %}
            <div class="gallery">
                {% for image in plantunit.images %}
                    {% set imgspe = image.path|basename %}
                    {% set img = ['uploads/'~image.module.uploaddir~'/', imgspe]|join('') %}
                    <a href="{{ asset(img) }}" class="grouped_elements" rel="group" title="{{ image.copyright }}">
                        <img src="{{ asset(img) | imagine_filter('thumb_100_100') }}" alt="{{ imgspe }}" border="0" /></a>
                {% endfor %}
            </div>
        {% endif %}
        {% if plantunit.locations|length > 0 %}
            {# LEAFLET MAP #}
            <div id="map"></div>
        {% endif %}
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/plantnetdata/js/fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/plantnetdata/js/fancybox/jquery.easing-1.3.pack.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            // $("a#single_image").fancybox();
            /* Apply fancybox to multiple items */
            $("a.grouped_elements").fancybox({
                'transitionIn' : 'elastic',
                'transitionOut' : 'elastic',
                'speedIn' : 200,
                'speedOut' : 200,
                'enableEscapeButton' : true,
                'hideOnContentClick' : true,
                'titlePosition' : 'inside',
                'overlayShow' : false
            });
        });
    </script>
    {% if plantunit.locations|length > 0 %}
        {% set locations = plantunit.locations %}
        {% include 'PlantnetDataBundle:Frontend:leaflet.js.html.twig' %}
    {% endif %}
{% endblock %}