{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Frontend:ajax_datatypes.html.twig" : "PlantnetDataBundle:Frontend:datatypes.html.twig" %}
{% block title collection.name|capitalize ~ ' - ' ~ module.name|capitalize %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block side %}
    {% include "PlantnetDataBundle:Frontend:side.html.twig" with { module: module_parent } %}
{% endblock %}
{% block main %}
	<div class="results">
		{% if paginator|length > 0 %}
			<div class="pagerfanta">
				{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
			</div>
			<div class="gallery">
				{% for image in paginator %}
					{% set imgspe = image.path|basename %}
					{% set img = ['uploads/'~module.uploaddir~'/', imgspe]|join('') %}
					<a href="{{ asset(img) }}" class="grouped_elements" rel="group" title="{{ image.copyright }}">
						<img src="{{ asset(img) | imagine_filter('thumb_100_100') }}" alt="{{ imgspe }}" class="img-polaroid" title="{{ image.plantunit.title1|capitalize }}" data-content="{{ image.plantunit.title1|capitalize }}<br />{{ image.plantunit.title2|capitalize }}" /></a>
				{% endfor %}
			</div>
			<div class="pagerfanta">
				{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
			</div>
		{% endif %}
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready(function() {
			/* Apply fancybox to multiple items */
			$('a.grouped_elements').fancybox({
				'transitionIn':'elastic',
				'transitionOut':'elastic',
				'speedIn':200,
				'speedOut':200,
				'enableEscapeButton':true,
				'hideOnContentClick':true,
				'titlePosition':'inside',
				'overlayShow':true
			});
			$('.gallery img').popover({
				trigger: 'hover',
				placement: 'left',
				html: true,
				container: 'body'
			})
			.click(function(e) {
				e.preventDefault()
			});
			$('.gallery img').addClass('blind');
			$('.gallery img').one('load',function(){
				var img=$(this);
				img.fadeTo(200,1);
			}).each(function(){
				if(this.complete)
				{
					$(this).load();
				}
			});
		});
	</script>
{% endblock %}