{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Frontend:ajax_datatypes.html.twig" : "PlantnetDataBundle:Frontend:datatypes.html.twig" %}
{% block title collection.name ~ ' - ' ~ module.name %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block side %}
    {% include "PlantnetDataBundle:Frontend:side.html.twig" with { module: module } %}
{% endblock %}
{% block main %}
    <div class="description">
        {% autoescape false %}
            {{ module.description }}
        {% endautoescape %}
    </div>
    <div class="results">
        {% if paginator|length > 0 %}
            <div class="pagerfanta">
                {% if paginator.haveToPaginate() %}
                    <form method="get" action="{{ path('_module', { 'project': project, 'collection': collection.name, 'module': module.name }) }}">
                        <input type="number" name="form_page" placeholder="{{ paginator.currentPage }}" class="span1" min="1" max="{{ paginator.nbPages }}" />
                    </form>
                {% endif %}
                {{ pagerfanta(
                    paginator,
                    'twitter_bootstrap_translated',
                    {
                        'proximity': 2,
                        'routeName': '_module_paginated',
                        'routeParams': {
                            'project':project,
                            'collection': collection.name,
                            'module': module.name
                        }
                    }
                ) }}
            </div>
             <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        {% for property in module.properties if property.id in display %}
                            <th>{{ property.name }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for plantunit in paginator %}
                        <tr class="" onmouseover="this.style.cursor='pointer'" onclick="document.location='{{ path('_details', { 'project': project, 'collection': collection.name, 'module': module.name, 'id': plantunit.id }) }}'">
                            <td>
                                {% if plantunit.images|length > 0 %}
                                    <i class="icon-camera"></i>
                                {% endif %}
                            </td>
                            <td>
                                {% if plantunit.locations|length > 0 %}
                                    <i class="icon-map-marker"></i>
                                {% endif %}
                            </td>
                            {% for field in display %}
                                <td>{{ plantunit.attributes[field] }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="pagerfanta">
                {{ pagerfanta(
                    paginator,
                    'twitter_bootstrap_translated',
                    {
                        'proximity': 2,
                        'routeName': '_module_paginated',
                        'routeParams': {
                            'project':project,
                            'collection': collection.name,
                            'module': module.name
                        }
                    }
                ) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}