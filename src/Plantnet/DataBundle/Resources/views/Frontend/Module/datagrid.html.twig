{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Frontend:ajax_datatypes.html.twig" : "PlantnetDataBundle:Frontend:datatypes.html.twig" %}
{% block title project|capitalize ~ ' - ' ~ collection.name ~ ' - ' ~ module.name ~ ' - Pl@ntnet' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block side %}
    {% include "PlantnetDataBundle:Frontend:side.html.twig" with { module: module } %}
{% endblock %}
{% block main %}
    <div class="description">
        {% autoescape false %}
            {{ module.description }}
        {% endautoescape %}
    </div>
    <div class="results">
        {% if paginator|length > 0 %}
            <div class="pagerfanta">
                {% if paginator.haveToPaginate() %}
                    {% if sortby != 'null' and sortorder != 'null' %}
                        <form method="get" action="{{ path('_module_paginated_sorted', { 'project': project, 'collection': collection.url, 'module': module.url, 'page': page, 'sortby': sortby, 'sortorder': sortorder }) }}">
                            <input type="number" name="form_page" placeholder="{{ paginator.currentPage }}" class="span1" min="1" max="{{ paginator.nbPages }}" />
                        </form>
                    {% else %}
                        <form method="get" action="{{ path('_module', { 'project': project, 'collection': collection.url, 'module': module.url }) }}">
                            <input type="number" name="form_page" placeholder="{{ paginator.currentPage }}" class="span1" min="1" max="{{ paginator.nbPages }}" />
                        </form>
                    {% endif %}
                {% endif %}
                {% if sortby != 'null' and sortorder != 'null' %}
                    {{ pagerfanta(
                        paginator,
                        'twitter_bootstrap_translated',
                        {
                            'proximity': 2,
                            'routeName': '_module_paginated_sorted',
                            'routeParams': {
                                'project': project,
                                'collection': collection.url,
                                'module': module.url,
                                'sortby': sortby,
                                'sortorder': sortorder,
                            }
                        }
                    ) }}
                {% else %}
                    {{ pagerfanta(
                        paginator,
                        'twitter_bootstrap_translated',
                        {
                            'proximity': 2,
                            'routeName': '_module_paginated',
                            'routeParams': {
                                'project': project,
                                'collection': collection.url,
                                'module': module.url
                            }
                        }
                    ) }}
                {% endif %}
            </div>
             <table class="table table-striped table-hover tr-link">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        {% for property in module.properties if property.id in display %}
                            <th>
                                {{ property.name }}
                                <span class="nowrap">
                                    <a href="{{ path('_module', { 'project': project, 'collection': collection.url, 'module': module.url }) }}/page1/sort-{{ property.id }}/order-asc">
                                        <i class="icon-circle-arrow-up"></i></a>
                                    <a href="{{ path('_module', { 'project': project, 'collection': collection.url, 'module': module.url }) }}/page1/sort-{{ property.id }}/order-desc">
                                        <i class="icon-circle-arrow-down"></i></a>
                                </span>
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for plantunit in paginator %}
                        <tr>
                            <td>
                                <a href="{{ path('_details', { 'project': project, 'collection': collection.url, 'module': module.url, 'id': plantunit.id }) }}">
                                    {% if plantunit.hasimages > 0 %}
                                        <i class="icon-camera"></i>
                                    {% endif %}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('_details', { 'project': project, 'collection': collection.url, 'module': module.url, 'id': plantunit.id }) }}">
                                    {% if plantunit.haslocations > 0 %}
                                        <i class="icon-map-marker"></i>
                                    {% endif %}
                                </a>
                            </td>
                            {% for field in display %}
                                <td>
                                    <a href="{{ path('_details', { 'project': project, 'collection': collection.url, 'module': module.url, 'id': plantunit.id }) }}">
                                        {{ plantunit.attributes[field] }}
                                    </a>
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="pagerfanta">
                {% if sortby != 'null' and sortorder != 'null' %}
                    {{ pagerfanta(
                        paginator,
                        'twitter_bootstrap_translated',
                        {
                            'proximity': 2,
                            'routeName': '_module_paginated_sorted',
                            'routeParams': {
                                'project': project,
                                'collection': collection.url,
                                'module': module.url,
                                'sortby': sortby,
                                'sortorder': sortorder,
                            }
                        }
                    ) }}
                {% else %}
                    {{ pagerfanta(
                        paginator,
                        'twitter_bootstrap_translated',
                        {
                            'proximity': 2,
                            'routeName': '_module_paginated',
                            'routeParams': {
                                'project': project,
                                'collection': collection.url,
                                'module': module.url
                            }
                        }
                    ) }}
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}