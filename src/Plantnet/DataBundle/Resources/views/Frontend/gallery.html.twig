{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Frontend:ajax_datatypes.html.twig" : "PlantnetDataBundle:Frontend:datatypes.html.twig" %}
{% block title module.name %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block main %}
	<div class="results">
		{% if paginator|length > 0 %}
			<div class="pagerfanta">
				{{ pagerfanta(paginator, 'twitter_bootstrap') }}
			</div>
			<div class="gallery">
				{% for row in paginator %}
					{% set imgspe = row.path|basename %}
					{% set img = ['uploads/'~module.uploaddir~'/', imgspe]|join('') %}
					<a href="{{ asset(img) }}" class="grouped_elements" rel="group" title="{{ row.copyright }}" data-content="{{ row.plantunit.title1 }}<br />{{ row.plantunit.title2 }}">
						<img src="{{ asset(img) | imagine_filter('thumb_100_100') }}" alt="{{ imgspe }}" class="img-polaroid" /></a>
				{% endfor %}
			</div>
			<div class="pagerfanta">
				{{ pagerfanta(paginator, 'twitter_bootstrap') }}
			</div>
		{% endif %}
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready(function() {
			// $('a#single_image').fancybox();
			/* Apply fancybox to multiple items */
			$('a.grouped_elements').fancybox({
				'transitionIn':'elastic',
				'transitionOut':'elastic',
				'speedIn':200,
				'speedOut':200,
				'enableEscapeButton':true,
				'hideOnContentClick':true,
				'titlePosition':'inside',
				'overlayShow':false
			});
			$('a[rel=group]').popover({
				trigger: 'hover',
				offset: 0,
				html: true
			})
			.click(function(e) {
				e.preventDefault()
			});
			$('.gallery').preloader();
		});
	</script>
{% endblock %}