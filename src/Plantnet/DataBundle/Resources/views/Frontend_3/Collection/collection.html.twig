{% extends "PlantnetDataBundle:Frontend_3:layout.html.twig" %}
{% block title config.name ~ ' - ' ~ collection.name ~ ' - Pl@ntnet' %}
{% block meta %}
    <meta name="description" content="{{ collection.description|striptags|truncate(200)|cleandesc }}"/>
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block header %}<h1>{{ config.name }} - {{ collection.name }}</h1>{% endblock %}
{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('front_project', {'project': project}) }}">{{ config.name }}</a>
            <span class="divider">/</span>
        </li>
        <li class="active">
            {{ collection.name }}
        </li>
    </ul>
{% endblock %}
{% block row %}
    <div>
        {% autoescape false %}
            {{ collection.description }}
        {% endautoescape %}
    </div>
    <div id="presentation_module">
        {% for module in collection.modules if (module.deleting != true and module.wsonly != true) %}
            {% include "PlantnetDataBundle:Frontend_3\\Module:module_presentation.html.twig" %}
        {% endfor %}
    </div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
            $('.carousel').carousel({
                interval:4000
            });
            $('.pop-tooltip').tooltip();
            $('.img-tooltip').tooltip();
        });
    </script>
{% endblock %}