<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
	<div>
        {{ form_label(form.username) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username) }}
    </div>
    <div>
        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div>
        {{ form_label(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first) }}
    </div>
    <div>
        {{ form_label(form.plainPassword.second) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second) }}
    </div>
    <div class="rd_chk" id="chk_super">
        {{ form_label(form.super) }}
        {{ form_errors(form.super) }}
        {{ form_widget(form.super) }}
    </div>
    <br />
    <div id="chk_super_hidden">
        <div>
        	<p class="text-warning">
    			Warning, the database name can not be changed later.
    		</p>
            {{ form_label(form.dbNameUq) }}
            {{ form_errors(form.dbNameUq) }}
            {{ form_widget(form.dbNameUq) }}
        </div>
        <div>
            <p class="text-warning">
                Warning, the default language can not be changed later.
            </p>
            {{ form_label(form.defaultlanguage) }}
            {{ form_errors(form.defaultlanguage) }}
            {{ form_widget(form.defaultlanguage) }}
        </div>
    </div>
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn" />
    </div>
</form>