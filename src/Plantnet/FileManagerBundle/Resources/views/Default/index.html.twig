{# src/Plantnet/FileManagerBundle/Resources/views/Default/index.html.twig #}
{% extends "PlantnetFileManagerBundle::layout.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/plantnetfilemanager/css/style.css') }}" />
{% endblock %}
{% block javascripts %}
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
	<script type="text/javascript" src="//malsup.github.com/jquery.form.js"></script>
	<script type="text/javascript" src="{{ asset('bundles/plantnetfilemanager/js/script.js') }}"></script>
{% endblock %}
{% block content %}
	<form id="formProgress" action="{{ path('plantnet_file_manager_upload',{'name':name}) }}" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
		<input type="submit" value="Envoyer" />
	</form>
	<div id="progress">
		<div class="bar"></div >
		<div class="percent">0%</div>
	</div>
	<div id="status"></div>
{% endblock %}